{
  "manifest_version": 3,
  "name": "Web Timer",
  "description": "Record using time among specified websites and show notification if the setting time is gone",
  "version": "1.0",
  "icons": {
    "16": "images/timer_16.png",
    "32": "images/timer_32.png",
    "48": "images/timer_48.png",
    "128": "images/timer_128.png"
  },
  "action": {
    "default_popup": "info.html",
    "default_icon": {
      "16": "images/timer_16.png",
      "32": "images/timer_32.png",
      "48": "images/timer_48.png",
      "128": "images/timer_128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["scripting", "alarms", "storage", "tabs", "activeTab", "notifications"]
}
